<div class="row main m-auto w-100" style="color: #d8d7df;">
  <div style="background-color: #2d2f35;;" class="col-2 p-4  h-100">
    <div class="row g-0 text-start">
      <button type="button" class="btn p-0 w-100 text-start btn-link" id="audioChannel1" data-name="{{name}}" data-room="{{roomID}}"
        style="text-decoration: none; color: #d8d7df; opacity: .5;">
        <i class="fas fa-volume-up"></i> Audio Channel #1
      </button>
      <div class="row g-0 mb-3 px-5 w-100 audioSection">
        <ul class="px-5 mx-5" id="appendAudio"></ul>
        <audio autoplay="true"></audio>
      </div>

    </div>
    <div class="row g-0">
      <a class="btn w-100 btn-link" href="/channel/1" style="text-decoration: none; color: #d8d7df;">Chat Channel
        #1</a>
    </div>
  </div>
  <div style="background-color: #363940;" class="col-xl p-4 w-100 h-100 g-0">
    <div class="row mb-3 g-0 chat-header text-center mx-auto border-bottom border-primary">
      <h6>Chat</h6>
    </div>
    <div class="row" style="height: 94%; max-height: 94%;">
      <div class="row g-0 w-100 chat-window">

      <ul id="chatCards" class="messages g-0">

      </ul>


    </div>
    <div class="input-group mt-3" style="background-color: #363940;">
     <input style="background-color: #2d2f35; color: #d8d7df; position: relative; " type="text" class="form-control border border-dark"
      id="chat-message" placeholder="Type message here..." aria-label="Type message here..."
      aria-describedby="basic-addon1">
    </div> 
    </div>
    
    




  </div>
</div>

<script src="/js/roomchat.js"></script>